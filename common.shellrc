# Git
alias gs="git status"
alias gd="git diff"
alias gds="git diff --staged"
alias ga="git add"
alias gap="git add -p"
alias gco="git checkout"
alias gcob="git checkout -b"
alias gcop="git checkout -p"
alias gb="git branch"
alias gsw="git switch"
alias gswc="git switch -c"
alias gcm="git commit -m"
alias gca="git commit --amend --no-edit"
alias gl="git log"
alias gu="git reset --soft HEAD~"
alias gr="git reset"
alias grh="git reset --hard"
alias gp="git pull"
alias gpr="git pull --rebase"
alias gprb="git pull --rebase"
alias gprbi="git pull --rebase=interactive"
alias grb="git rebase"
alias grbs="git rebase --skip"
alias grbc="git rebase --continue"
alias grba="git rebase --abort"
alias grbm="git rebase master"
alias grbim="git rebase -i master"
alias gst="git stash"
alias gstp="git stash push -m"
alias gstl="git stash list"
alias gg="git grep"
alias gfm="git fetch origin master:master"

grbi() {
    [ $# -le 1 ] || { >&2 echo "error: only one ref argument supported" && return 1; }
    if [ $# -eq 1 ]; then
        git rebase -i $1
    else
        git rebase -i HEAD~10
    fi
}

gdl() {
    [ $# -le 1 ] || { >&2 echo "error: only one ref argument supported" && return 1; }
    if [ $# -eq 1 ]; then
        git diff $1~ $1
    else
        git diff HEAD~ HEAD
    fi
}

get_stashref() {
    if [ $# -gt 1 ]; then
        >&2 echo "error: only one stash# argument supported"
        exit 1
    elif [ $# -eq 1 ]; then
        echo "stash@{$1}"
    else
        echo "stash@{0}"
    fi
}

gstps() {
    git stash -- $(git diff --staged --name-only)
}

gstpop() {
    stashref=$(get_stashref $@) || return 1
    git stash pop "$stashref"
}

gstdrop() {
    stashref=$(get_stashref $@) || return 1
    git stash drop "$stashref"
}

gsts() {
    stashref=$(get_stashref $@) || return 1
    git stash show "$stashref"
}

gstsp() {
    stashref=$(get_stashref $@) || return 1
    git stash show -p "$stashref"
}

