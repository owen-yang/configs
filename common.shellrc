alias fs="fsr -r"
alias ll="ls -lAh"
alias llg="ll | g"

# Misc
alias du="du -sh"
alias df="df -h"
alias dd="rm"
alias view="vim -R"

# tmux attach
#alias tma="tmux attach-session -t 0"
tma() {
    [ $# -le 1 ] || { >&2 printf "error: at most 1 argument expected\nusage: tma [SESSION]\n" && return 1; }
    if [ $# -eq 1 ]; then
        tmux attach-session -t $1
    else
        tmux attach-session -t 0
    fi
}
